{
  "manifest_version": 3,
  "name": "Hide n' Seek: Hide Promoted Jobs & Companies",
  "short_name": "Hide n' Seek",
  "description": "View the jobs you seek. Hide the ones you don't. Easily hide promoted jobs, companies, and more on LinkedIn, Indeed, and Glassdoor.",
  "version": "7.1.3",
  "icons": {
    "16": "/assets/images/hide-n-seek-icon-16.png",
    "32": "/assets/images/hide-n-seek-icon-32.png",
    "48": "/assets/images/hide-n-seek-icon-48.png",
    "128": "/assets/images/hide-n-seek-icon-128.png"
  },
  "permissions": ["scripting", "storage", "tabs"],
  "optional_host_permissions": [
    "https://*.glassdoor.com/*",
    "https://*.glassdoor.at/*",
    "https://*.glassdoor.be/*",
    "https://*.glassdoor.ca/*",
    "https://*.glassdoor.ch/*",
    "https://*.glassdoor.co.in/*",
    "https://*.glassdoor.co.nz/*",
    "https://*.glassdoor.co.uk/*",
    "https://*.glassdoor.com.ar/*",
    "https://*.glassdoor.com.au/*",
    "https://*.glassdoor.com.br/*",
    "https://*.glassdoor.com.hk/*",
    "https://*.glassdoor.com.mx/*",
    "https://*.glassdoor.de/*",
    "https://*.glassdoor.es/*",
    "https://*.glassdoor.fr/*",
    "https://*.glassdoor.ie/*",
    "https://*.glassdoor.it/*",
    "https://*.glassdoor.nl/*",
    "https://*.glassdoor.sg/*",
    "https://*.indeed.com/*",
    "https://*.linkedin.com/*"
  ],
  "action": {
    "default_title": "Hide n' Seek",
    "default_popup": "/runtime/popup/popup.html",
    "default_icon": {
      "16": "/assets/images/hide-n-seek-icon-16.png",
      "32": "/assets/images/hide-n-seek-icon-32.png",
      "48": "/assets/images/hide-n-seek-icon-48.png",
      "128": "/assets/images/hide-n-seek-icon-128.png"
    }
  },
  "background": {
    "scripts": ["/runtime/background/background.js"],
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "damian@outlook.com"
    }
  }
}
